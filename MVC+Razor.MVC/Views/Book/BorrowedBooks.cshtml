@model List<Book>
@{
    ViewData["Title"] = "Borrowed Books";
}

<div class="row pt-2">
    <h3 class="text-primary fw-bold col-6">Borrowed Books <span class="small">(@Model?.Count)</span></h3>
    <div class=" text-end">
        <a href="Addemployee" class="btn btn-success mb-4 px-4 py-2 fw-bold">Add</a>
    </div>
</div>

@if (Model is null)
{
    <em>Loading ......</em>
}
else if (Model.Any() is false)
{
    <h4>No Borrowed Book Was Found in the database for this Customer</h4>
}
else
{
    <div class="container-fluid overflow-auto m-0 p-0">
        <table class="table table-bordered table-striped text-center align-middle">
            <thead class="table-dark">
                <tr>
                    <th>Title</th>
                    <th>Author</th>
                    <th>ISBN</th>
                    <th>Returned</th>
                    <th class="bg-dark"></th>
                </tr>
            </thead>
            <tbody class="border-1 border-dark">
                @foreach (var book in Model)
                {
                    <tr>
                        <td class="col-3 fw-bold link-primary ">@book.Title</td>
                        <td class="col-2 ">@book.Author</td>
                        <td class="col-1 ">@book.ISBN</td>
                        @if (book.Available)
                        {
                            <td class="bg-success bg-opacity-50">Yes</td>
                        }
                        else
                        {
                            <td class="col-1 bg-warning bg-opacity-50">NO</td>
                        }
                        <td class="col-1">
                            <div>
                                <a href="@($"/UpdateEmployee/{book.Guid}")" class="btn btn-warning p-1 mt-1 mb-1">Update</a>
                                <a href="@($"/DeleteEmployee/{book.Guid}")" class="btn btn-danger p-1">Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
}